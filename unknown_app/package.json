{
  "name": "unknown_app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "description": "UNKNOWN - A modern, intuitive chiptune loop composer",
  "author": "Bitloop",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check",
    "test": "vitest",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "electron:dev": "vite build && electron .",
    "electron:build": "vite build && electron-builder --win",
    "electron:build:all": "vite build && electron-builder --win --mac --linux"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "svelte": "^4.2.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^4.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "jsdom": "^24.0.0",
    "svelte-check": "^3.6.0",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "build": {
    "appId": "com.bitloop.unknown",
    "productName": "UNKNOWN",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "artifactName": "${productName}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "Gibson417",
      "repo": "Bitloop"
    }
  }
}
